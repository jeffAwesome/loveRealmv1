<div class="right">
<% if user_signed_in? %>
<%= render 'shared/follow_form' , user: @user%>
<% end %>
<div class="followers">Followers <%= followers_count(current_user.id) %></div>
<div class="followers">Following <%= following_count(current_user.id) %></div>
</div>
<%= image_tag @user.avatar.url(:thumb), class: 'profile' %>
<span class="left">
<h4><%= @user.name %></h4>
</span>
<div class="row feed ">
<% @activities.each do |activity| %>
    <%= render_activity(activity) %>
<% end %>
</div>
